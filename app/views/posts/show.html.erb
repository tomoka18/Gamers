  <div class="container">
    <div class="row justify-content-center align-items-center main-container">
      <div class="col-md-5">
        <div class="text-center">
          <h2>投稿ユーザー</h2>
          <%= link_to @post.user.name, user_path(@post.user), class: "text-dark" %>
        </div>
        <div class="text-center">
          <h2>タイトル</h2>
          <p><%= @post.title %></p>
        </div>
        <div class="text-center">
          <h2>募集内容</h2>
          <p><%= @post.body %></p>
        </div>
        <div class="text-center">
          <h2>ゲームタイトル</h2>
          <p><%= @post.genre.name %></p>
        </div>
        <div class="text-center">
          <% if @post.user == current_user %>
            <%= link_to "削除", post_path(@post), method: :delete , class:'btn btn-outline-danger' %>
          <% end %>
        </div>
      </div>
      <div class="col-md-3">
        <div class="comments">
          <p>コメント件数：<%= @post.post_comments.count %></p>
            <% if @post.liked_by?(current_user) %>
              <p>
                <%= link_to post_likes_path(@post), method: :delete, class: "text-dark" do %>
                  <%= link_to @post.user.name, user_path(@post.user), class: "text-dark" %> いいね
                <% end %>
              </p>
            <% else %>
              <p>
                <%= link_to post_likes_path(@post), method: :post, class: "text-dark" do %>
                  ♡<%= @post.likes.count %> いいね
                <% end %>
              </p>
            <% end %>
        </div>
        <div class="new-comment">
          <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
            <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %><br>
            <%= f.submit "送信する", class: "btn btn-outline-dark btn-sm" %>
          <% end %>
        </div>
      </div>
      <div class="col-md-4">
        <% @post.post_comments.each do |post_comment| %>
          <%= post_comment.user.name %>
          <%= post_comment.created_at.strftime('%Y/%m/%d') %><br>
          <%= post_comment.comment %>
          <% if post_comment.user == current_user %>
          <div class="comment-delete">
            <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, class:'btn btn-outline-danger btn-sm' %>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
