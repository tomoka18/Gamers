<h1>新規投稿</h1>

<%= form_with model:@post, url:'/posts', local:true do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id  %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>募集内容</h4>
  <%= f.text_area :body %>
  <h4>ゲームタイトル</h4>
  <%= f.select :genre_id, Genre.all.map{ |genre| [genre.name, genre.id] }, {include_blank: '選択してください'} %>
  <%= f.submit '投稿' %>
<% end %>