<div class="container">
  <div class="row justify-content-center main-container">
    <div class="col-md-10">
      <div class="col-md-12">
        <h3 class="form-group text-center m-4">フォロー一覧</h3>
        <% if @users.exists? %>
          <table class="table table-hover table-invers">
            <thead>
              <tr>
                <th>アイコン</th>
                <th>名前</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "unnamed.jpg",size: "30x30" %></td>
                  <td><%= link_to user.name, user_path(user), class: "text-dark" %></td>
                  <td>フォロー数: <%= user.followings.count %></td>
                  <td>フォロワー数: <%= user.followers.count %></td>
                  <td>
                    <% if user == current_user %>
                    <% elsif current_user.following?(user) %>
                      <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-outline-dark btn-sm mr-2" %>
                    <% else %>
                      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-dark btn-sm mr-2" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>ユーザーはいません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

