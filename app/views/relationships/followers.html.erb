<h2>Follower Users</h2>
<% if @users.exists? %>
<table class="table table-hover table-invers">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.png",size: "30x30" %></td>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
        <td><%= link_to "Show", user_path(user) %></td>
      </tr>
    <% end %>
    </table>
  </tbody>
</table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>