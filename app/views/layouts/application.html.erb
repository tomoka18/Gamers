<!DOCTYPE html>
<html>
  <head>
    <title>Gamers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <body>
    </head>

  　<header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container">
          <%= link_to 'Gamers', root_path , class:"navbar-brand" %>
          <%= search_form_for @search do |f| %>
            <%= f.text_field :title_cont, placeholder: '名前を入力...' %>
            <%= f.submit ("検索する") %>
          <% end %>

          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li><%= link_to "トップ", root_path, class: "nav-link" %></li>
            <li><%= link_to "ホーム", home_index_path, class: "nav-link" %></li>
            <li><%= link_to "DM", dm_path, class: "nav-link" %></li>
            <li><%= link_to "マイページ", user_path(current_user.id), class: "nav-link" %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
            <% else %>
          <!--ログインしていない時-->
            <li><%= link_to "トップ", root_path, class: "nav-link" %></li>
            <li><%= link_to "About", home_about_path, class: "nav-link" %></li>
            <li><%= link_to "新規登録", new_user_registration_path, class: "nav-link" %></li>
            <li><%= link_to "ログイン", new_user_session_path, class: "nav-link" %></li>
          <% end %>
          </ul>
        </div>
      </nav>
  　</header>

      <%= yield %>

    <footer class="footer">
      <div class='container fixed-bottom'>
        <div class='row'>
          <div class='mx-auto'>
            <p>ゲームやろおおおおお卍卍卍</p>
          </div>
        </div>
      </div>
    </footer>
  </body>

</html>
