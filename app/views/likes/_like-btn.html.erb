<% if post.liked_by?(current_user) %>
  <p>
    <%= link_to post_likes_path(post), method: :delete, remote: true, class: "text-light" do %>
    ♥<%= post.likes.count %> いいね
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to post_likes_path(post), method: :post, remote: true, class: "text-light" do %>
    ♡<%= post.likes.count %> いいね
    <% end %>
　</p>
<% end %>