<div class="container">
  <div class="row justify-content-center align-items-center main-container">
    <div class="col-md-6">
      <div class="col-md-12">
        <table>
          <tbody>
            <tr>
              <td class="text-center mb-3" style="width: 30%;">お名前</td>
              <td><%= @contact.name %></td>
            </tr>
            <tr>
              <td class="text-center">メールアドレス</td>
              <td style="white-space: pre-wrap;"><%= @contact.email %></td>
            </tr>
            <tr>
              <td class="text-center">お電話番号</td>
              <td style="white-space: pre-wrap;"><%= @contact.phone_number %></td>
            </tr>
            <tr>
              <td class="text-center">メッセージ</td>
              <td style="white-space: pre-wrap;"><%= @contact.message %></td>
            </tr>
          </tbody>
        </table>

        <%= form_for(@contact) do |f| %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :email %>
          <%= f.hidden_field :phone_number %>
          <%= f.hidden_field :message %>
          <div><%= f.submit '送信', class: "btn btn-outline-dark btn-sm"%></div>
        <% end %>
        <%= form_for @contact, url: back_path do |f| %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :email %>
          <%= f.hidden_field :phone_number %>
          <%= f.hidden_field :message %>
          <div><%= f.submit '入力画面に戻る', class: "btn btn-outline-dark btn-sm" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>

