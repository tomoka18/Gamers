<% if user == current_user %>
<% elsif current_user.following?(user) %>
  <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "btn btn-outline-info btn-md mr-2" %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-info btn-md mr-2" %>
<% end %>