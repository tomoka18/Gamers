<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="container">
    <div class="row justify-content-center align-items-center">
      <div class="col-md-6">
        <div class="col-md-12">
          <form>
            <h3 class="text-center text-info">Log in</h3>
            <div class="form-group">
              <%= f.label :email, class: "text-info" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </div>
          
            <div class="form-group">
              <%= f.label :password, class: "text-info" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
            </div>
          
            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "text-info" %>
              </div>
            <% end %>
          
            <div class="form-group text-center">
              <%= f.submit "Log in", class: "btn btn-info btn-md" %>
            </div>
            <div class="form-group text-center">
              <%= render "devise/shared/links" %>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
<% end %>