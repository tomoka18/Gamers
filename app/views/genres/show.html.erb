<div class="container">
  <div class="row justify-content-center main-container">
    <div class="col-md-10">
      <div class="col-md-12">
        <h3 class="form-group text-center m-4">投稿一覧</h3>
        <table class="table table-hover table-invers">
          <thead>
            <tr>
              <th>タイトル</th>
              <th>投稿ユーザー</th>
              <th>投稿日時</th>
              <th>ゲーム名</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= link_to post.title, post_path(post.id), class: "text-dark" %></td>
                <td><%= link_to post.user.name, user_path(post.user), class: "text-dark" %></td>
                <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
                <td><%= post.genre.name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%= paginate @posts %>
